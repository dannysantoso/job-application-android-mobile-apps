<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EmployerMenu.processingMember"
    android:background="@color/backgroundColor"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/memberid"
        android:visibility="invisible"/>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Member Name"
        android:id="@+id/membername"
        android:textColor="@color/colorWhite"
        />
    <TextView
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Member Phone"
        android:id="@+id/memberphone"
        android:textColor="@color/colorWhite"
        />
    <TextView
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Member Status"
        android:id="@+id/memberstatus"
        android:textColor="@color/colorWhite"
        />

    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date Interview (dd/mm/yyyy) :"
        android:textColor="@color/colorWhite"
        />


    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/date"
        android:background="@drawable/design_edit_text"
        />
    <Button
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call Interview"
        android:id="@+id/btninterview"
        android:background="@drawable/design_btn"
        android:textColor="@color/colorWhite"
        android:padding="10dp"
        />
    </LinearLayout>


</LinearLayout>