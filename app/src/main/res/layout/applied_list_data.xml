<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/appliedlist">
    <androidx.cardview.widget.CardView
        android:layout_margin="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@color/backgroundColor"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/jobid"
                android:visibility="invisible"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/jobdesk"
                android:text="Job Desk"
                android:textSize="22sp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                />

            <TextView
                android:layout_width="270sp"
                android:layout_height="wrap_content"
                android:id="@+id/company"
                android:textSize="18sp"
                android:text="Company"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/jobdesk"
                android:textColor="@color/colorWhite"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/address"
                android:textSize="18sp"
                android:text="Address"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/company"
                android:textColor="@color/colorWhite"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/salary"
                android:textSize="18sp"
                android:text="Salary"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/address"
                android:textColor="@color/colorWhite"
                />

            <TextView
                android:layout_width="270sp"
                android:layout_height="wrap_content"
                android:id="@+id/status"
                android:layout_marginLeft="10dp"
                android:text="Status"
                android:textSize="18sp"
                android:layout_below="@id/salary"
                android:textColor="@color/colorWhite"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/date"
                android:text="Date"
                android:textSize="18sp"
                android:layout_marginLeft="-10dp"
                android:layout_toRightOf="@id/status"
                android:layout_below="@id/salary"
                android:textColor="@color/colorWhite"
                />

            <Button
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="Cancel"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/company"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/cancelbutton"
                android:background="@drawable/design_btn"
                android:textColor="@color/colorWhite"
                />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>